<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_avr_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"

    tools:context="a071bct.instrumentation.AvrControl">

    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:id="@+id/disconnect"
        android:text="Disconnect"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:elevation="2dp" />
    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:id="@+id/opendoor"
        android:text="Open Door"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:elevation="2dp" />
    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:id="@+id/closedoor"
        android:text="Close Door"
        android:layout_margin="2px"
        android:layout_height="wrap_content"
        android:elevation="2dp" />

    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:id="@+id/lockdoor"
        android:text="Lock Door"
        android:layout_margin="2px"
        android:layout_height="wrap_content"
        android:elevation="2dp" />

    <Button
        style="@android:style/Widget.Material.Button.Colored"
        android:layout_width="match_parent"
        android:id="@+id/unlockdoor"
        android:text="Unlock Door"
        android:layout_margin="2px"
        android:layout_height="wrap_content"
        android:elevation="2dp" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textStatus"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textreceiver"
        android:textColor="@color/colorAccent"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/confirmation_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="?android:attr/colorAccent"
        android:text="@string/purchase_done"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/encrypted_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textAppearance="@android:style/TextAppearance.Material.Body2"
        android:textColor="?android:attr/colorAccent"
        android:text="@string/purchase_done"
        android:visibility="gone"/>

</LinearLayout>
